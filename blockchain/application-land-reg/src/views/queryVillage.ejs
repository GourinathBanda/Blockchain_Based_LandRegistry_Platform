<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <title>Query Village</title>
    </head>
    <body>
        <div class="d-flex align-items-center bg-light" style="min-height: 100vh;">
            <div class="container" >
                <div class="d-flex justify-content-center">
                    <div class="col-md-6">
                        <div class="card rounded-0 shadow">
                            <div class="card-body">
                                <h3>Query Village</h3>
                                <% if (typeof errorMsg != 'undefined') { %>
                                    <div class="alert alert-danger">
                                        <%= errorMsg %>
                                    </div>
                                <% } %>
                                <form action="/form/queryVillage" method="POST">
                                    <div class="form-group">
                                        <label for="state">State: </label>
                                        <select required name="state" class="form-control" id="state">
                                            <option value="" selected hidden>Select State</option>
                                        </select> 
                                    </div>
                                    <div class="form-group">
                                        <label for="district">District: </label>
                                        <select required name="district" class="form-control" id="district">
                                            <option value="" selected hidden>Select District</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="subDistrict">Sub-District: </label>
                                        <select required name="subDistrict" class="form-control" id="subDistrict">
                                            <option value="" selected hidden>Select Sub-District</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="village">Village:</label>
                                        <select required name="village" class="form-control" id="village">
                                            <option value="" selected hidden>Select Village</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <script src="/jquery/jquery.min.js"></script>
                <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
                <script src="/static/main.js"></script>
                
            </div>
    </body>
</html>